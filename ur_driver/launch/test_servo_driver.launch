<?xml version="1.0"?>

<launch>

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(find ur_driver)/ur.rviz" />

  <!-- <node name="ur_status_interface" pkg="ur_driver" type="ur_status_interface.py"/> -->

  <node name="target_frame_broadcaster" pkg="lcsr_tf_tools" type="interactive_transform_publisher" args=".15 -.75 .4 3.1415 0 0 /world /target_frame 10"/>

  <node pkg="tf" type="static_transform_publisher" name="world_to_ur_base" args=" 0 0 0 3.1415 0 0  /world /base_link 100"/>

  <!-- robot_ip: IP-address of the robot's socket-messaging server -->
  <arg name="robot_ip" />
  <arg name="limited" default="false"/>

  <!-- robot model -->
  <include file="$(find ur_description)/launch/ur5_upload.launch">
    <arg name="limited" value="$(arg limited)"/>
  </include>
  
  <!-- ur common -->
  <include file="$(find ur_driver)/launch/servo_driver.launch">
    <arg name="robot_ip"   value="$(arg robot_ip)" />
  </include>

</launch>
